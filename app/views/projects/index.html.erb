<div class="subnav">
  <h4>Projects by the students of the Flatiron School</h4>
</div>

<div class="container">

<div class="row-fluid">
<h1></h1>
</div>
<!-- <div class="project-gallery"> -->
  <!-- <div class="gallery-row"> -->
<div class="row-fluid">
      <% @projects.each_with_index do |project, i| %>
        <% if i%3 == 0 %>
          </div>
          <div class="row-fluid">
            <div class="project span4"> 
<!--           <div class="box"> -->
             <div class="cover-image">
              <% project.images.where(image_type: "cover").each do |cover| %>
                  <%= image_tag cover.upload.url(:medium)%>
              <%end%>
             </div>
<!--           </div> -->
            <h4><%= link_to project.name, project %></h4>
            <%= project.description %>
        </div>
        <% else %>
        <div class="project span4"> 
<!--           <div class="box">-->
            <div class="cover-image"> 
              <% project.images.where(image_type: "cover").each do |cover| %>
                  <%= image_tag cover.upload.url(:medium)%>
              <%end%>
             </div>
<!--          </div> -->
            <h4><%= link_to project.name, project %></h4>
            <%= project.description %>
        </div>
        <%end%>
      <%end%>
    </div>
  </div>
</div>

<div class = "project span4"><%= link_to 'Submit a Project', new_project_path %></div>

</div>