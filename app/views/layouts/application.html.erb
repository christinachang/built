    	<% else %>
    	  <li> <%= link_to "Sign up / Login with Github", login_path %></li>
    	<% end %>
    </ul>
    <div id="built-logo"><a href = "/"><img src="/assets/logo.png" /></a>
    </div>
  </div>
</div>
  </div>
  <div>
    <%= flash[:alert] %> 
  </div>
</div>

			<%= yield %>
</div>

</body>
</html>
